{
  "name": "jarvis",
  "version": "0.1.0",
  "private": true,
  "description": "Voice-first AI coding mentor",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "npm run dev --workspaces --if-present",
    "build": "npm run build --workspaces --if-present",
    "clean": "npm run clean --workspaces --if-present",
    "test": "npm run test --workspaces --if-present && npm run test:husky",
    "test:husky": "./tests/husky/run-all-tests.sh",
    "lint": "npm run lint --workspaces --if-present",
    "typecheck": "npm run typecheck --workspaces --if-present",
    "prepare": "husky"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "@types/puppeteer": "^5.4.7",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "eslint": "^8.56.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.5",
    "prettier": "^3.2.4",
    "puppeteer": "^24.17.0",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "lint-staged": {
    "packages/core/**/*.{js,ts}": [
      "bash -c 'cd packages/core && npx eslint --fix'",
      "prettier --write"
    ],
    "packages/webapp/**/*.{js,ts,tsx,jsx}": [
      "bash -c 'cd packages/webapp && npx eslint --fix'",
      "prettier --write"
    ],
    "packages/shared/**/*.{js,ts}": [
      "bash -c 'cd packages/shared && npx eslint --fix'",
      "prettier --write"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ],
    "packages/core/**/*.ts": [
      "bash -c 'cd packages/core && npx tsc --noEmit'"
    ],
    "packages/webapp/**/*.{ts,tsx}": [
      "bash -c 'cd packages/webapp && npx tsc --noEmit'"
    ],
    "packages/shared/**/*.ts": [
      "bash -c 'cd packages/shared && npx tsc --noEmit'"
    ]
  }
}
